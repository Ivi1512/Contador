<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_Contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:onClick="contar"
        android:padding="15dp"
        android:text="@string/contador"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_numero"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/bt_Reset"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="-92dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/bt_Contador"
        android:background="#FF9800"
        android:gravity="center"
        android:text="@string/numero"
        android:textColor="#00695C"
        android:textSize="96sp" />

    <Button
        android:id="@+id/bt_Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_Contador"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="reset"
        android:text="@string/reset"
        android:textSize="24sp" />

</RelativeLayout>